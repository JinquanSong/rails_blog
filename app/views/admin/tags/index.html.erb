<div class="row">
  <div class="col-md-4 dashboard-left-cell">
    <%= render 'new' %>
  </div>

  <div class="col-md-8 dashboard-right-cell">
    <div class="admin-content-con">
      <header>
        <h5>Tags</h5>
      </header>

      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @tags.each do |tag|%>
              <tr>
                <td><%= tag.name %></td>
                <td><%= status_converter(tag.in_use?, truthy: 'in use', falsey: 'not in use') %> </td>
                <td><%= time_ago(tag.created_at) %></td>
                <td>
                  <%= link_to edit_admin_tag_path(tag) do %>
                      <button type="button" class="btn btn-xs btn-warning">Edit</button>
                  <% end %>
                  <%= create_deletable_button(tag) %>
                </td>
              </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>