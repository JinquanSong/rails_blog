<div id="content">
  <header class="clearfix">
    <div class="col-xs-5 col-sm-3 col-md-3"><b>All Visitors</b></div>
    <div class="col-xs-7 col-sm-3 col-md-9" >
      <%= link_to 'Create New Post', new_admin_post_path, class: "btn btn-xs btn-primary pull-right" %>
    </div>
  </header>

  <div class="content-inner">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Full Name </th>
          <th>Email</th>
          <th>Status</th>
          <th class="hidden-xs">Created At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @visitors.each do |visitor| %>
            <tr>
              <td><%= visitor.id %></td>
              <td><%= visitor.fullname %></td>
              <td><%= visitor.email %></td>
              <td><%= status_converter(visitor.status, truthy: 'Active', falsey: 'Pending') %></td>
              <td class="hidden-xs"><%= time_ago(visitor.created_at) %></td>
              <td>
                <%= link_to admin_visitor_path(visitor), method: :delete, data: {confirm: 'Are you sure?'} do %>
                    <button type="button" class="btn btn-xs btn-danger disabled">Delete</button>
                <% end %>
              </td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<p><%= paginate @visitors %></p>




