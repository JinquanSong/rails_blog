
<div class="col-md-2 col-sm-1 hidden-xs valign-top display-table-cell" id="side-menu">
  <h1 class="hidden-sm hidden-xs">Navigation</h1>
  <ul>
    <li class="btn-link active">
      <a href="<%= admin_dashboard_index_path %>">
        <span class="glyphicon glyphicon-th" aria-hidden="true"></span>
        <span class="hidden-sm hidden-xs">Dashboard</span>
      </a>
    </li>

    <li class="btn-link">
      <a href="#collapse-post" data-toggle="collapse" aria-controls="collapse-post">
        <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
        <span class="hidden-sm hidden-xs">Posts</span>
        <span class="label label-success pull-right hidden-sm hidden-xs">20</span>
      </a>

      <ul class="collapse collapseable" id="collapse-post">
        <li><a href="<%= new_admin_post_path %>">Create New</a></li>
        <li><a href="<%= admin_posts_path %>">View Posts</a></li>
      </ul>
    </li>

    <li class="btn-link">
      <a href="#collapse-comments" data-toggle="collapse" aria-controls="collapse-comments">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <span class="hidden-sm hidden-xs">Comments</span>
      </a>

      <ul class="collapse collapseable" id="collapse-comments">
        <li>
          <a href="<%= admin_comments_path(status: true) %>">Approved
            <span class="label label-success pull-right  hidden-sm hidden-xs">10</span>
          </a>
        </li>
        <li>
          <a href="<%= admin_comments_path(status: false) %>">Unapproved
            <span class="label label-warning pull-right  hidden-sm hidden-xs">10</span>
          </a>
        </li>
      </ul>
    </li>

    <li class="btn-link">
      <a href="<%= admin_tags_path %>">
        <span class="glyphicon glyphicon-tag" aria-hidden="true"></span>
        <span class="hidden-sm hidden-xs">Tags</span>
      </a>
    </li>

    <li class="btn-link settings-btn">
      <a href="<%= new_admin_setting_path %>">
        <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
        <span class="hidden-sm hidden-xs">Settings</span>
      </a>
    </li>

    <li class="btn-link">
      <a href="<%= admin_moderators_path %>">
        <span class="glyphicon glyphicon-flag" aria-hidden="true"></span>
        <span class="hidden-sm hidden-xs">Moderators</span>
      </a>
    </li>

    <li class="btn-link">
      <a href="<%= admin_visitors_path %>">
        <span class="glyphicon glyphicon-transfer" aria-hidden="true"></span>
        <span class="hidden-sm hidden-xs">Visitors</span>
      </a>
    </li>
  </ul>
</div>