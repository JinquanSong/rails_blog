<% if object.errors.any? %>
    <div if="validation_errors">
      <h2><%= pluralize(object.errors.count, "error") %> prohibited a successful save : </h2>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
            <li> <%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>