<%= stylesheet_link_tag "admin/sessions" %>

<div class="container">
    <%= form_tag admin_sessions_path, class: 'signin-form' do %>
        <h1 class="text-center">Sign in</h1>
        <p>
          <label class="sr-only">Username</label>
          <%= text_field_tag :username,'', placeholder: "Username", class: "form-control", required: 'required' ,autofocus: true %>
        </p>
        <p>
          <label class="sr-only">Password</label>
          <%= password_field_tag :password,'', placeholder: "Password", class: "form-control", required: 'required'%>
        </p>

        <p><label><input type="checkbox">Remember Me</label></p>
        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
    <% end %>
</div>

